---
const { imgSrc } = Astro.props
---

<div class="card">
    <div class="card-img">
        <img class="card-img__img" src={imgSrc} />
    </div>
    <div class="card-description w-full h-3/6 flex flex-col">
        <slot />
    </div>
</div>

<style>
    .card{
        width: 300px;
        height: 400px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
    }
    .card-img{
        width: 75%;
        height: 50%;
    }
    .card-img__img{
        width: 100%;
        height: 100%;
        border-radius: 50%;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
    }
    .card-description{
        padding: 10px;
    }
</style>